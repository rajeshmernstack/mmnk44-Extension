{
    "name": "Kindle Description Extension",
    "description": "Automate Description Extension for chrome",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons": {
        "16": "/images/icon.png",
        "32": "/images/icon.png",
        "48": "/images/icon.png",
        "128": "/images/icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon.png",
            "32": "/images/icon.png",
            "48": "/images/icon.png",
            "128": "/images/icon.png"
        }
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"

    ],
    "host_permissions": [
        "https://kdp.amazon.com/*",
        "https://mmnk44.mernweb.com/*"
    ]
}